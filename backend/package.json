{
  "name": "bun-api-server",
  "version": "1.0.0",
  "description": "Bun server API for Bun-React template",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun index.ts",
    "dev": "bun --watch index.ts",
    "dev:frontend": "cd ../frontend && bun run dev",
    "build:frontend": "cd ../frontend && bun run build",
    "dev:all": "concurrently \"bun run dev\" \"bun run dev:frontend\""
  },
  "dependencies": {
    "elysia": "^0.8.17",
    "@elysiajs/swagger": "^0.8.5",
    "@elysiajs/static": "^0.8.1"
  },
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^9.1.2",
    "typescript": "latest"
  }
}